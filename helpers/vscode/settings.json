{
	// Security
	"security.workspace.trust.untrustedFiles": "open",
	"security.workspace.trust.enabled": false,
	// Update
	"update.showReleaseNotes": false,
	// Window
	"window.commandCenter": false,
	"window.menuBarVisibility": "compact",
	// Workbench
	"workbench.activityBar.location": "hidden",
	"workbench.colorTheme": "GitHub Dark",
	"workbench.editor.enablePreview": false,
	"workbench.editor.empty.hint": "hidden",
	"workbench.iconTheme": "material-icon-theme",
	"workbench.layoutControl.enabled": false,
	"workbench.sideBar.location": "right",
	"workbench.startupEditor": "none",
	"workbench.editor.tabSizing": "shrink",
	"workbench.tips.enabled": false,
	// Explorer
	"explorer.compactFolders": false,
	"explorer.confirmDelete": false,
	"explorer.confirmDragAndDrop": false,
	// Editor
	"editor.cursorBlinking": "expand",
	"editor.cursorSmoothCaretAnimation": "on",
	"editor.cursorStyle": "line",
	"editor.cursorWidth": 2,
	"editor.detectIndentation": false,
	"editor.folding": false,
	"editor.formatOnPaste": true,
	"editor.formatOnSave": true,
	"editor.glyphMargin": false,
	"editor.hover.above": false,
	"editor.hover.enabled": false,
	"editor.hover.sticky": false,
	"editor.inlayHints.enabled": "off",
	"editor.insertSpaces": false,
	"editor.lightbulb.enabled": false,
	"editor.linkedEditing": true,
	"editor.minimap.enabled": false,
	"editor.parameterHints.cycle": false,
	"editor.parameterHints.enabled": false,
	"editor.renderControlCharacters": false,
	"editor.renderWhitespace": "none",
	"editor.scrollbar.horizontal": "hidden",
	"editor.scrollbar.vertical": "hidden",
	"editor.scrollBeyondLastLine": false,
	"editor.smoothScrolling": true,
	"editor.suggestSelection": "first",
	"editor.tabSize": 2,
	"editor.wordSeparators": "`~!@#$%^&*()-_=+[{]}\\|;:'\",.<>/?",
	// Other
	"breadcrumbs.enabled": false,
	// Files
	"files.autoSave": "afterDelay",
	"files.eol": "\n",
	"files.insertFinalNewline": true,
	"files.trimFinalNewlines": true,
	"files.trimTrailingWhitespace": true,
	// Terminal
	"terminal.integrated.copyOnSelection": true,
	"terminal.integrated.cursorBlinking": true,
	"terminal.integrated.cursorStyle": "line",
	"terminal.integrated.cursorWidth": 2,
	"terminal.integrated.defaultProfile.windows": "Git Bash",
	"terminal.integrated.profiles.windows": {
		"Git Bash": {
			"source": "Git Bash"
		}
	},
	// Git
	"git.autofetch": true,
	"git.autofetchPeriod": 30,
	"git.confirmSync": false,
	"git.ignoreLimitWarning": true,
	// NPM
	"npm.fetchOnlinePackageInfo": false,
	// Extensions
	"extensions.ignoreRecommendations": true,
	// javaScript and typeScript
	"javascript.updateImportsOnFileMove.enabled": "always",
	"typescript.updateImportsOnFileMove.enabled": "always",
	"[javascript,typescript]": {
		"editor.defaultFormatter": "vscode.typescript-language-features"
	},
	// SCSS
	"scss.format.enable": false,
	"scss.format.spaceAroundSelectorSeparator": true,
	"scss.lint.duplicateProperties": "error",
	"scss.showErrors": true,
	"[scss]": {
		"editor.defaultFormatter": "sibiraj-s.vscode-scss-formatter"
	},
	"scssFormatter.printWidth": 85,
	"scssFormatter.trailingComma": "none",
	// CSS
	"css.lint.duplicateProperties": "error",
	// Pug
	"pugFormatter.removeDiv": true,
	// Path-intellisense
	"typescript.suggest.paths": false,
	"javascript.suggest.paths": false,
	"path-intellisense.autoSlashAfterDirectory": true,
	"path-intellisense.autoTriggerNextSuggestion": true,
	"path-intellisense.ignoreTsConfigBaseUrl": true,
	"path-intellisense.mappings": {
		"@scss": "${workspaceRoot}/src/scss",
		"@img": "${workspaceRoot}/src/img",
		"@js": "${workspaceRoot}/src/js"
	},
	"path-intellisense.showHiddenFiles": true
}
